#include<stdio.h>
#include<string.h>
#include<stdlib.h>
void main(){
    char opcode[10],operand[10],label[10],code[10],mneumonic[5];
    int loctr,start,length;
    
    FILE *fp1,*fp2,*fp3,*fp4;
    
    fp1=fopen("input.txt","r");
    fp2=fopen("optab.txt","r");
    fp3=fopen("symtab.txt","w");
    fp4=fopen("out.txt","w");
    
    
    fscanf(fp1,"%s\t%s\t%s",label,opcode,operand);
    
    if(strcmp(opcode,"START")==0)
    {
        start=atoi(operand);
        loctr=start;
        fprintf(fp4,"\t%s\t%s\t%s\n",label,opcode,operand);
        fscanf(fp1,"%s\t%s\t%s",label,opcode,operand);
    }
    else
    {
        loctr=0;
        
    }
    while(strcmp(opcode,"END")!=0)
    {
            fprintf(fp4,"%d\t",loctr);
            
            if(strcmp(label,"**")!=0)
            {
                fprintf(fp3,"%s\t%d\n",label,loctr);
                fscanf(fp2,"%s\t%s",code,mneumonic);
                
            }
        
        
        while(strcmp(code,"END")!=0)
        {
            if(strcmp(opcode,code)==0)
            {
                loctr+=3;
                break;
            }
            fscanf(fp2,"%s\t%s",code,mneumonic);
            
        }    
            if(strcmp(opcode,"WORD")==0)
            {
                loctr+=3;
            
            }
            else if(strcmp(opcode,"RESW")==0)
            {
                loctr+=(3*(atoi(operand)));
            
            }
            else if(strcmp(opcode,"RESB")==0)
            {
                loctr+=atoi(operand);
            
            }
            else if(strcmp(opcode,"BYTE")==0)
            {
                ++loctr;
            
            }
            
            fprintf(fp4,"\t%s\t%s\t%s\n",label,opcode,operand);
            fscanf(fp1,"%s\t%s\t%s",label,opcode,operand);
    }
    fprintf(fp4,"%d\t%s\t%s\t%s\n",loctr,label,opcode,operand);
    
    
    length=loctr-start;
    printf("Length of the code=%d\n",length);
    
    fclose(fp1);
    fclose(fp2);
    fclose(fp3);
    fclose(fp4);
    
}
